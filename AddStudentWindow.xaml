<Window x:Class="DoAn_QLCSV.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Cựu Sinh Viên" Height="550" Width="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" Background="#252526" BorderBrush="#444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10,10,0,0" MouseDown="Border_MouseDown">
                <Grid>
                    <TextBlock Text="THÊM HỒ SƠ CỰU SINH VIÊN" Foreground="White" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button Content="✕" Width="35" Height="35" HorizontalAlignment="Right" Margin="0,0,10,0" Background="Transparent" Foreground="#AAA" BorderThickness="0" Click="btnCancel_Click"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="25,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Mã Sinh Viên (*):" Foreground="#FFC107"/>
                    <TextBox x:Name="txtMaSV"/>
                    <TextBlock Text="Họ và Tên (*):" Foreground="#FFC107"/>
                    <TextBox x:Name="txtHoTen"/>
                    <TextBlock Text="Email (*):"/>
                    <TextBox x:Name="txtEmail"/>
                    <TextBlock Text="Tiểu sử (Bio):"/>
                    <TextBox x:Name="txtBio" Height="60" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Khoa (Faculty):"/>
                    <TextBox x:Name="txtFaculty"/>
                    <TextBlock Text="Ngành (Major):"/>
                    <TextBox x:Name="txtNganh"/>
                    <TextBlock Text="Năm Tốt Nghiệp:"/>
                    <TextBox x:Name="txtNamTotNghiep"/>
                    <TextBlock Text="Công ty hiện tại:"/>
                    <TextBox x:Name="txtCongTy"/>
                    <TextBlock Text="Vị trí công việc:"/>
                    <TextBox x:Name="txtViTri"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Lĩnh vực (Industry):"/>
                    <TextBox x:Name="txtIndustry"/>
                    <TextBlock Text="Thành phố:"/>
                    <TextBox x:Name="txtCity"/>
                    <TextBlock Text="Quốc gia:"/>
                    <TextBox x:Name="txtCountry" Text="Việt Nam"/>
                    <TextBlock Text="LinkedIn URL:"/>
                    <TextBox x:Name="txtLinkedIn"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Hủy" Width="80" Height="30" Background="#444" Foreground="White" Margin="0,0,10,0" BorderThickness="0" Click="btnCancel_Click"/>
                <Button Content="Lưu Hồ Sơ" Width="100" Height="30" Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="btnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
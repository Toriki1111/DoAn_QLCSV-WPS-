<UserControl x:Class="DoAn_QLCSV.StudentProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="#1E1E1E">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2F2F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsReadOnly" Value="False">
                    <Setter Property="BorderBrush" Value="#61AFEF"/>
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0D0D0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD166"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                <TextBlock Text="HỒ SƠ SINH VIÊN" FontSize="30" FontWeight="ExtraBold" Foreground="#61AFEF" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button x:Name="btnEdit" Content="✍️ Chỉnh Sửa" Style="{StaticResource ActionButton}" Background="#1976D2" Click="btnEdit_Click"/>
                    <Button x:Name="btnSave" Content="💾 Lưu" Style="{StaticResource ActionButton}" Background="#2E7D32" Visibility="Collapsed" Click="btnSave_Click"/>
                </StackPanel>
            </DockPanel>

            <Border Grid.Row="2" Background="#262626" CornerRadius="10" Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="28"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="1. THÔNG TIN CÁ NHÂN" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Mã Sinh Viên (MSSV)"/>
                        <TextBox x:Name="txtMSSV" FontWeight="Bold" Foreground="#CCCCCC" IsReadOnly="True"/>

                        <TextBlock Text="Họ và Tên"/>
                        <TextBox x:Name="txtHoTen" IsReadOnly="True"/>

                        <TextBlock Text="Email"/>
                        <TextBox x:Name="txtEmail"/>

                        <Separator Margin="0,12,0,18" Background="#3E3E3E" Height="1"/>

                        <TextBlock Text="2. THÔNG TIN HỌC VẤN" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Khoa (Faculty)"/>
                        <TextBox x:Name="txtFaculty" IsReadOnly="True"/>

                        <TextBlock Text="Ngành Học (Major)"/>
                        <TextBox x:Name="txtMajor" IsReadOnly="True"/>

                        <TextBlock Text="Năm Tốt Nghiệp"/>
                        <TextBox x:Name="txtGradYear" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="3. THÔNG TIN NGHỀ NGHIỆP &amp; LIÊN HỆ" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Công Ty Hiện Tại"/>
                        <TextBox x:Name="txtCompany"/>

                        <TextBlock Text="Vị Trí Công Việc"/>
                        <TextBox x:Name="txtPosition"/>

                        <TextBlock Text="Lĩnh Vực Hoạt Động"/>
                        <TextBox x:Name="txtIndustry"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Thành phố"/>
                                <TextBox x:Name="txtCity"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Quốc gia"/>
                                <TextBox x:Name="txtCountry"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="LinkedIn URL"/>
                        <TextBox x:Name="txtLinkedIn" Foreground="#64B5F6"/>

                        <TextBlock Text="Facebook URL"/>
                        <TextBox x:Name="txtFacebook" Foreground="#64B5F6"/>

                        <Separator Margin="0,12,0,18" Background="#3E3E3E" Height="1"/>

                        <TextBlock Text="4. TIỂU SỬ (BIO)" Style="{StaticResource HeaderStyle}"/>
                        <TextBox x:Name="txtBio" Height="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
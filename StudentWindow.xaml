<Window x:Class="DoAn_QLCSV.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cổng thông tin Alumni"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Loaded="Window_Loaded">

    <!-- ================= RESOURCES & STYLES ================= -->
    <Window.Resources>
        <!-- Button style for Expander items -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="10,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Expander style -->
        <Style TargetType="Expander">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Window control buttons -->
        <Style x:Key="WindowBtnStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="#111111"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#FFC107"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD54F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusPillGreen" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="Background" Value="#22C55E"/>
        </Style>

        <Style x:Key="StatusPillRed" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="Background" Value="#EF4444"/>
        </Style>
    </Window.Resources>

    <!-- ================= MAIN LAYOUT ================= -->
    <Border x:Name="MainBorder" Background="#1E1E1E" CornerRadius="15" BorderBrush="#333333" BorderThickness="1" Margin="40">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR with Expanders -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0" CornerRadius="15,0,0,15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Logo/Header -->
                        <Border Height="60" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                <TextBlock Text="👤" FontSize="20"/>
                                <TextBlock Text="STUDENT" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" Foreground="White" FontSize="16"/>
                            </StackPanel>
                        </Border>

                        <!-- Home button (no expander) -->
                        <Button x:Name="btnHome" Style="{StaticResource MenuButtonStyle}" Content="🏠   Trang Chủ" Tag="Active" Click="btnHome_Click"/>

                        <!-- Hồ sơ Expander -->
                        <Expander Header="👤   HỒ SƠ">
                            <StackPanel Margin="10,0,0,0">
                                <Button x:Name="btnProfile" Style="{StaticResource MenuButtonStyle}" Content="📋   Hồ sơ cá nhân" Click="btnProfile_Click"/>
                                <Button x:Name="btnHistory" Style="{StaticResource MenuButtonStyle}" Content="📝   Lịch sử cập nhật" Click="btnHistory_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Sự kiện Expander -->
                        <Expander Header="📅   SỰ KIỆN">
                            <StackPanel Margin="10,0,0,0">
                                <Button x:Name="btnEvents" Style="{StaticResource MenuButtonStyle}" Content="📅   Sự kiện sắp tới" Click="btnEvents_Click"/>
                                <Button x:Name="btnMyEvents" Style="{StaticResource MenuButtonStyle}" Content="✅   Đăng ký của tôi" Click="btnMyEvents_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Danh bạ Expander -->
                        <Expander Header="🌐   DANH BẠ">
                            <StackPanel Margin="10,0,0,0">
                                <Button x:Name="btnNetwork" Style="{StaticResource MenuButtonStyle}" Content="🔍   Tìm kiếm Alumni" Click="btnNetwork_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Cài đặt Expander -->
                        <Expander Header="⚙️   CÀI ĐẶT">
                            <StackPanel Margin="10,0,0,0">
                                <Button x:Name="btnChangePass" Style="{StaticResource MenuButtonStyle}" Content="🔒   Đổi mật khẩu" Click="btnChangePass_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Tài khoản Expander -->
                        <Expander Header="👤   TÀI KHOẢN">
                            <StackPanel Margin="10,0,0,0">
                                <Button x:Name="btnLogout" Style="{StaticResource MenuButtonStyle}" Content="🚪   Đăng xuất" Foreground="#FF5252" Click="btnLogout_Click"/>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- MAIN CONTENT AREA -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0" MouseDown="Header_MouseDown" Background="Transparent" BorderBrush="#333333" BorderThickness="0,0,0,1">
                    <Grid>
                        <TextBlock x:Name="lblPageTitle" Text="← Tổng quan" VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold" Foreground="#DDDDDD" Cursor="Hand" FontSize="16"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,10,0">
                            <Button Content="─" Style="{StaticResource WindowBtnStyle}" Click="btnMinimize_Click"/>
                            <Button Content="☐" Style="{StaticResource WindowBtnStyle}" Click="btnMaximize_Click"/>
                            <Button Content="✕" Width="35" Height="30" Click="btnClose_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource WindowBtnStyle}">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D32F2F"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- MAIN CONTENT: Overview cards -->
                <ContentControl Grid.Row="1" x:Name="MainContent" Margin="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,4,0,20" Orientation="Vertical" HorizontalAlignment="Stretch">

                            <!-- CARD 1: Welcome Banner -->
                            <Border Background="#262626"
                                    CornerRadius="12"
                                    BorderBrush="#3F3F46"
                                    BorderThickness="1"
                                    Padding="20"
                                    Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="Chào mừng quay trở lại!"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#FFC107"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="Bạn có 3 sự kiện sắp tới và 12 alumni mới trong ngành của bạn."
                                                   FontSize="13"
                                                   Foreground="#D4D4D8"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="Hãy cập nhật hồ sơ và theo dõi các sự kiện mới nhất để kết nối với mạng lưới cựu sinh viên."
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Foreground="#9CA3AF"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <Button Content="Cập nhật hồ sơ"
                                                Style="{StaticResource PrimaryActionButton}"
                                                Margin="0,0,0,4"/>
                                        <TextBlock Text="Lần cập nhật gần nhất: 05/12/2025"
                                                   FontSize="11"
                                                   Foreground="#9CA3AF"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- CARD 2: Stats Quick View -->
                            <Border Background="#252525"
                                    CornerRadius="12"
                                    BorderBrush="#3F3F46"
                                    BorderThickness="1"
                                    Padding="18"
                                    Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Tổng quan thông tin"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="#F9FAFB"
                                               Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Box 1: Sự kiện -->
                                        <Border Background="#1F2933" CornerRadius="10" Padding="12" Margin="0,0,8,0">
                                            <StackPanel>
                                                <TextBlock Text="Sự kiện sắp tới" FontSize="11" Foreground="#9CA3AF"/>
                                                <TextBlock Text="3" FontSize="20" FontWeight="Bold" Foreground="#F9FAFB" Margin="0,4,0,0"/>
                                                <TextBlock Text="Chờ bạn đăng ký" FontSize="11" Foreground="#93C5FD" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Box 2: Hồ sơ -->
                                        <Border Grid.Column="1" Background="#1F2933" CornerRadius="10" Padding="12" Margin="4,0,4,0">
                                            <StackPanel>
                                                <TextBlock Text="Hoàn thiện hồ sơ" FontSize="11" Foreground="#9CA3AF"/>
                                                <TextBlock Text="85%" FontSize="20" FontWeight="Bold" Foreground="#F9FAFB" Margin="0,4,0,0"/>
                                                <TextBlock Text="Thêm thông tin công việc" FontSize="11" Foreground="#FACC15" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Box 3: Alumni mới -->
                                        <Border Grid.Column="2" Background="#1F2933" CornerRadius="10" Padding="12" Margin="8,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Alumni mới cùng ngành" FontSize="11" Foreground="#9CA3AF"/>
                                                <TextBlock Text="12" FontSize="20" FontWeight="Bold" Foreground="#F9FAFB" Margin="0,4,0,0"/>
                                                <Border Style="{StaticResource StatusPillGreen}" Margin="0,4,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Xem danh sách" FontSize="11" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- CARD 3: Quick Actions -->
                            <Border Background="#252525"
                                    CornerRadius="12"
                                    BorderBrush="#3F3F46"
                                    BorderThickness="1"
                                    Padding="18">
                                <StackPanel>
                                    <TextBlock Text="Hành động nhanh"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="#F9FAFB"
                                               Margin="0,0,0,6"/>
                                    <TextBlock Text="•  Cập nhật thông tin công việc để tăng tương tác với mạng lưới"
                                               FontSize="12"
                                               Foreground="#D4D4D8"/>
                                    <TextBlock Text="•  Đăng ký các sự kiện sắp tới để gặp gỡ các alumni"
                                               FontSize="12"
                                               Foreground="#D4D4D8"
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="•  Xem hồ sơ các alumni mới trong ngành của bạn"
                                               FontSize="12"
                                               Foreground="#D4D4D8"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </ContentControl>
            </Grid>
        </Grid>
    </Border>
</Window>
<Window x:Class="DoAn_QLCSV.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize">

    <Border CornerRadius="10" Background="#252526" BorderBrush="#444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form -->
                <RowDefinition Height="70"/>
                <!-- Button -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10,10,0,0" MouseDown="Border_MouseDown">
                <Grid>
                    <TextBlock Text="ĐỔI MẬT KHẨU" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16"/>
                    <Button Content="✕" Width="40" HorizontalAlignment="Left" Background="Transparent" Foreground="#AAA" BorderThickness="0" Click="btnCancel_Click" Height="50" Margin="458,0,0,0" VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="40,20">
                <TextBlock Text="Mật khẩu hiện tại:" Foreground="#BBB" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtOldPass" Padding="5" Background="#333" Foreground="White" BorderBrush="#555" Height="35"/>

                <TextBlock Text="Mật khẩu mới:" Foreground="#BBB" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtNewPass" Padding="5" Background="#333" Foreground="White" BorderBrush="#555" Height="35"/>

                <TextBlock Text="Nhập lại mật khẩu mới:" Foreground="#BBB" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtConfirmPass" Padding="5" Background="#333" Foreground="White" BorderBrush="#555" Height="35"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" BorderBrush="#333" BorderThickness="0,1,0,0" Background="#1E1E1E" CornerRadius="0,0,10,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Button Content="Hủy" Width="100" Height="35" Background="#444" Foreground="White" Margin="0,0,10,0" Click="btnCancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Lưu Thay Đổi" Width="120" Height="35" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnSave_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
<Window x:Class="DoAn_QLCSV.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký Tài Khoản" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnRegisterStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1" MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="20,0,0,20" Background="#be29ec" ClipToBounds="True">
                <Grid>
                    <Canvas>
                        <Ellipse Width="200" Height="200" Fill="#FFFFFF" Opacity="0.1" Canvas.Left="-50" Canvas.Top="-50"/>
                        <Ellipse Width="100" Height="100" Fill="#FFFFFF" Opacity="0.1" Canvas.Right="-20" Canvas.Bottom="100"/>
                    </Canvas>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="THAM GIA" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="CÙNG CHÚNG TÔI" FontSize="30" FontWeight="Bold" Foreground="#E8F5E9" HorizontalAlignment="Center"/>
                        <TextBlock Text="Kết nối cộng đồng Cựu Sinh Viên" FontSize="16" Foreground="#C8E6C9" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Button Content="✕" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0"
                        Background="Transparent" BorderThickness="0" Foreground="#DDDDDD" FontSize="16" Cursor="Hand" Click="btnClose_Click"/>

                <StackPanel VerticalAlignment="Center" Margin="40,20">
                    <TextBlock Text="TẠO TÀI KHOẢN" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                    <TextBlock Text="Họ và Tên:" Foreground="#BBBBBB" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtFullname" Margin="0,0,0,10"/>

                    <TextBlock Text="Email:" Foreground="#BBBBBB" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

                    <TextBlock Text="Tên đăng nhập:" Foreground="#BBBBBB" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mật khẩu:" Foreground="#BBBBBB" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtPassword" PasswordChar="*"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Nhập lại mật khẩu:" Foreground="#BBBBBB" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtConfirmPass" PasswordChar="*"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="ĐĂNG KÝ NGAY" Style="{StaticResource BtnRegisterStyle}" Margin="0,15,0,0" Click="btnRegister_Click"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Đã có tài khoản? " Foreground="#BBBBBB"/>
                        <TextBlock>
                            <Hyperlink Click="btnBackToLogin_Click" FontWeight="Bold">Đăng nhập</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
<UserControl x:Class="DoAn_QLCSV.AcademicManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1100"
             Background="Transparent">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ KHOA &amp; NGÀNH ĐÀO TẠO" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <!-- Khoa -->
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
                <!-- Ngành -->
            </Grid.ColumnDefinitions>

            <!-- CỘT TRÁI: KHOA -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="🏫 DANH SÁCH KHOA" Foreground="#FFC107" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Content="+ Thêm Khoa" Margin="15,0,0,0" Padding="10,5" Background="#333" Foreground="White" BorderThickness="0" Click="btnAddFaculty_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="dgFaculties" AutoGenerateColumns="False" Background="#1E1E1E" RowBackground="#1E1E1E" Foreground="#EEE" 
                              SelectionChanged="dgFaculties_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Tên Khoa" Binding="{Binding Name}" Width="*"/>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✎" Width="30" Background="Transparent" Foreground="Orange" BorderThickness="0" Click="btnEditFaculty_Click"/>
                                            <Button Content="🗑" Width="30" Background="Transparent" Foreground="Red" BorderThickness="0" Click="btnDelFaculty_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- CỘT PHẢI: NGÀNH (Theo Khoa) -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="🎓 NGÀNH THUỘC KHOA" Foreground="#64B5F6" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Content="+ Thêm Ngành" Margin="15,0,0,0" Padding="10,5" Background="#333" Foreground="White" BorderThickness="0" Click="btnAddMajor_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="dgMajors" AutoGenerateColumns="False" Background="#1E1E1E" RowBackground="#1E1E1E" Foreground="#EEE">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Mã Ngành" Binding="{Binding Code}" Width="80"/>
                            <DataGridTextColumn Header="Tên Ngành" Binding="{Binding Name}" Width="*"/>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✎" Width="30" Background="Transparent" Foreground="Orange" BorderThickness="0" Click="btnEditMajor_Click"/>
                                            <Button Content="🗑" Width="30" Background="Transparent" Foreground="Red" BorderThickness="0" Click="btnDelMajor_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>